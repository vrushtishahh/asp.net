@model LibraryManagementApp.Models.Book

<h1>Edit Book</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Year</label>
        <input asp-for="Year" />
    </div>
    <div>
        <button type="submit">Save</button>
    </div>
</form>
